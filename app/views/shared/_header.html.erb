<div id="header">
  <div id="logo-container">
    <%= link_to '', root_path, id: 'logo' %>
    <%= link_to '', root_path, id: 'logo-name' %>
  </div>
  <a id="follow-open">Follow</a>
  <a id="contact-open">Contact</a>
  <a id="share-open">Share</a>
  <div id="follow">
    <ul>
      <li class="twitter"><a href="https://twitter.com/billblass" class="track" target="_blank"><i class="fa fa-twitter"></i></a></li>
      <li class="instagram"><a href="https://instagram.com/billblassusa" class="track" target="_blank"><i class="fa fa-instagram"></i></a></li>
      <li class="facebook"><a href="https://www.facebook.com/billblassusa" class="track" target="_blank"><i class="fa fa-facebook"></i></a></li>
    </ul>
  </div>
  <div id="share">
    <ul>
      <% # TODO: replace this insanity %>
      <% message = "Be the first to get a sneak peek of Bill Blass ready-to-wear, handbags, shoes, and more." %>
      <% email_title = "Somebody Chic Invites You to billblass.com" %>
      <% email_content = message %>
      <li class="twitter"><a target="_blank" href="https://twitter.com/intent/tweet?text=<%= CGI::escape(message + " " + root_url) %>"><i class="fa fa-twitter"></i></a></li>
      <li class="facebook"><a target="_blank" href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>&title=Bill+Blass"><i class="fa fa-facebook"></i></a></li>
      <li class="envelope"><a href="mailto:?subject=<%= email_title %>&body=<%= email_content + " " + root_url %>"<i class="fa fa-envelope"></i></a></li>
    </ul>
  </div>
  <div id="contact">
    <div class="contact">
      <a class="phone" href="tel:2126898955">212.689.8955</a>
      <a class="email" href="mailto:info@billblass.com?subject=Joining the countdown to launch at billblass.com">info@billblass.com</a>
    </div>
    <div class="contact-mobile">
      <a class="phone" href="tel:2126898955"><i class="fa fa-phone"></i></a>
      <a class="email" href="mailto:info@billblass.com?subject=Joining the countdown to launch at billblass.com"><i class="fa fa-envelope"></i></a>
    </div>
  </div>
</div>

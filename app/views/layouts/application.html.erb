</head>
<body id="<%= @bodyId %>">
  <%= render partial: 'shared/header' %>
  <div id="wrap">
    <div id="content">
      <div id="splash">
        <div class="splash-left">
          <%= yield %>
        </div>
        <div class="splash-right">
          <%= image_tag("poster.png") %>
        </div>
      </div>
      <div id="bottom">
        <div id="countbox"></div>
      </div>
    </div>
  </div>
</body>

$background-gradient-from: #d4a53f;
$background-gradient-to: #C38700;
$background-color: $background-gradient-from;

$background-dark: darken($background-gradient-to, 5%);

$white: #FFF;
$dark-gray: #333;

$error-color: $dark-gray;

$gt-walsheim-medium: 'gt_walsheim_medium', sans-serif;
$gt-walsheim-regular: 'gt_walsheim_regular', sans-serif;
$cardo: 'Cardo', serif;

$grid-width-desktop: 1020px;
$grid-width-mobile: 400px;

$padding-desktop-h: 40px;
$padding-desktop-v: 120px;
$padding-mobile-h: 20px;
$padding-mobile-v: 90px;

$form-base-unit: 9px;
$form-font-size: 15px;

$form-element-height: $form-base-unit * 2 + $form-font-size + 4;

@mixin type-body {
	font-family: $cardo;
	font-size: 14px;
	font-weight: 500;
	line-height: 1.5em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
	@media (max-width: 767px) {
		font-size: 12px;
	}
}
@mixin type-list {
	@include type-body;
	line-height: 1.7em;
}
@mixin type-heading-prelaunch {
	font-family: $gt-walsheim-regular;
	font-size: 40px;
	letter-spacing: 1px !important;
	line-height: 1em;
	@media (max-width: 767px) {
		font-size: 22px;
	}
}
@mixin type-heading1 {
	font-family: $gt-walsheim-medium;
	font-size: 80px;
	letter-spacing: 1px !important;
	line-height: 1em;
	@media (max-width: 767px) {
		font-size: 28px;
	}
}
@mixin type-heading2 {
	font-family: $gt-walsheim-regular;
	font-size: 24px;
	line-height: 1em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
	@media (max-width: 767px) {
		font-size: 18px;
	}
}
@mixin type-heading3 {
	font-family: $gt-walsheim-regular;
  font-size: $form-font-size;
	font-size: 15px;
	line-height: 1.3em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
}
@mixin type-form {
	font-family: $gt-walsheim-regular;
  font-size: $form-font-size;
	font-size: 15px;
	line-height: 1em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
  @media (max-width: 767px) {
		font-size: 12px;
	}
}
@mixin type-heading4 {
	font-family: $gt-walsheim-regular;
	font-size: 12px;
	line-height: 1em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
}
@mixin type-line-item {
	font-family: $gt-walsheim-regular;
	font-size: $form-font-size;
	line-height: 1.6em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
}
@mixin type-read-more {
	font-family: $gt-walsheim-regular;
	font-size: 14px;
	line-height: 1em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
}
@mixin type-product-name {
	font-family: $gt-walsheim-regular;
	font-size: 14px;
	line-height: 1em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
	@media (max-width: 767px) {
		font-size: 12px;
	}
}
@mixin type-price {
	font-family: $gt-walsheim-regular;
	font-size: 16px;
	line-height: 1em;
	letter-spacing: 1px;
	-webkit-font-smoothing: antialiased;
	@media (max-width: 767px) {
		font-size: 12px;
	}
}
@mixin nav-link {
	@include type-heading3;
	@include transition(border-bottom-color .5s);
	border-bottom: 2px solid transparent;
	cursor: pointer;
	&.open,
	&:hover {
		border-bottom-color: $white;
	}
}
@mixin sidebar-common {
	position: fixed;
	z-index: 10;
	opacity: 0;
	pointer-events: none;
	@include transition(opacity .5s 0s, border-color .5s 0s, z-index 0s .5s);
	&.open {
		pointer-events: auto;
		opacity: 1;
		z-index: 20;
		@include transition(opacity .5s 0s, border-color .5s 0s, z-index 0s 0s);
	}
}
@mixin close-button {
	@include nav-link;
	position: fixed;
	top: 25px;
	left: 35px;
	margin-left: -59px;
	@include transition(margin 0.5s);
	@include animation(slidein 0.5s);
	&.visible {
		margin-left: 0;
	}
}
@keyframes fadein {
	from { opacity: 0 }
	to   { opacity: 1 }
}
